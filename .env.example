# Supabase Configuration
# Get these values from your Supabase project settings at https://app.supabase.com

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co

# Your Supabase publishable (public) key - safe to use in browser with RLS enabled
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key

# Your Supabase secret key (keep this secret! Only use on server)
SUPABASE_SECRET_KEY=your-secret-key

# Resend API key for sending emails (https://resend.com)
RESEND_API_KEY=re_your_api_key

# Your application URL (required for OAuth redirects)
# In development: http://localhost:3000
# In production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000
SUPABASE_SERVICE_ROLE_KEY=

# Jira Integration (for Help & Support system)
# Get these from your Jira Cloud instance and id.atlassian.com
JIRA_DOMAIN=https://your-domain.atlassian.net
JIRA_USER_EMAIL=admin@example.com
JIRA_API_TOKEN=your-api-token-here
JIRA_PROJECT_KEY=SUP
# Issue Type IDs - find these by calling: GET /rest/api/3/issuetype
# or navigate to your Jira project settings > Issue types and inspect the URLs
JIRA_ISSUE_TYPE_BUG_ID=10001
JIRA_ISSUE_TYPE_STORY_ID=10002
JIRA_ISSUE_TYPE_TASK_ID=10003
